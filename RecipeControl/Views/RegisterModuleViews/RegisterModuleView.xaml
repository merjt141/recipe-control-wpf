<Window x:Class="RecipeControl.Views.RegisterModuleViews.RegisterModuleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeControl.Views.RegisterModuleViews"
        mc:Ignorable="d"
        Title="RegisterModuleView" Height="450" Width="800">
    <Grid>
        <Button x:Name="WeighBtn" 
                Content="Pesar" 
                HorizontalAlignment="Left"
                Margin="79,51,0,0" 
                VerticalAlignment="Top"
                Width="65"/>
        <Label x:Name="TypeLbl" 
               Content="Tipo" 
               HorizontalAlignment="Left" 
               Margin="386,121,0,0" 
               VerticalAlignment="Top"/>
        <Label x:Name="SAPCodeLbl" 
               Content="Código Insumo (SAP)" 
               HorizontalAlignment="Left" 
               Margin="487,126,0,0" 
               VerticalAlignment="Top"/>
        <Label x:Name="WeighLbl" 
               Content="Valor Pesado" 
               HorizontalAlignment="Left" 
               Margin="27,121,0,0" 
               VerticalAlignment="Top"/>
        <Label x:Name="UnicodeLbl" 
               Content="Código Único" 
               HorizontalAlignment="Left" 
               Margin="144,121,0,0" 
               VerticalAlignment="Top"/>
        <Label x:Name="DatetimeLbl" 
               Content="Fecha Pesado" 
               HorizontalAlignment="Left" 
               Margin="261,121,0,0" 
               VerticalAlignment="Top"/>
        <Label x:Name="MarginLbl" 
               Content="Margen" 
               HorizontalAlignment="Left" 
               Margin="651,126,0,0" 
               VerticalAlignment="Top"/>
        <Label x:Name="UserLbl" 
               Content="Usuario" 
               HorizontalAlignment="Left" 
               Margin="508,35,0,0" 
               VerticalAlignment="Top"/>
        <Button x:Name="WeighBtn_Copy" 
                Content="Registrar" 
                HorizontalAlignment="Left"
                Margin="644,197,0,0" 
                VerticalAlignment="Top"
                Width="65"/>
        <TextBox x:Name="WeighInput" 
                 HorizontalAlignment="Left" 
                 Margin="27,152,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="88"/>
        <TextBox x:Name="UnicodeInput" 
                 HorizontalAlignment="Left" 
                 Margin="138,152,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="88"/>
        <TextBox x:Name="DatetimeInput" 
                 HorizontalAlignment="Left" 
                 Margin="258,152,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="88"/>
        <ComboBox x:Name="TypeCmb" 
                  HorizontalAlignment="Left" 
                  Margin="361,150,0,0" 
                  VerticalAlignment="Top" 
                  Width="84"/>
        <ComboBox x:Name="SAPCodeCmb" 
                  HorizontalAlignment="Left" 
                  Margin="487,152,0,0" 
                  VerticalAlignment="Top" 
                  Width="135"/>
        <Ellipse x:Name="MarginDisp" 
                 HorizontalAlignment="Left" 
                 Height="21" Margin="666,153,0,0" 
                 Stroke="Black" 
                 VerticalAlignment="Top"
                 Width="21"/>
        <Label
               Content="PESAJE MICROINGREDIENTES" 
               HorizontalAlignment="Left" 
               Margin="277,22,0,0" 
               VerticalAlignment="Top"/>
        <TextBox x:Name="UserInput" 
                 HorizontalAlignment="Left" 
                 Margin="565,41,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="88"/>
        <Label
            Content="Lista de Micro-Ingredientes Pesados" 
            HorizontalAlignment="Left" 
            Margin="27,194,0,0" 
            VerticalAlignment="Top"/>
        <DataGrid x:Name="WeightRegisterDataGrid" 
                  HorizontalAlignment="Left" 
                  Height="149" 
                  Margin="27,240,0,0" 
                  VerticalAlignment="Top" 
                  Width="717" 
                  d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Label x:Name="RecetaLbl" 
               Content="Receta" 
               HorizontalAlignment="Left" 
               Margin="508,66,0,0" 
               VerticalAlignment="Top"/>

    </Grid>
</Window>
