<Window x:Class="RecipeControl.Views.ReportModuleViews.ReportModuleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Generación de Reportes" 
        Height="450" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid>
        <DataGrid x:Name="WeightRegisterDataGrid" 
            HorizontalAlignment="Left" 
            Height="173" 
            Margin="30,217,0,0" 
            VerticalAlignment="Top" 
            Width="940" 
            ItemsSource="{Binding RegistroPesoList}"
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                    Binding="{Binding RegistroBatchWarehouseId}"
                    Width="50"/>
                <DataGridTextColumn Header="Código Insumo (SAP)" 
                    Binding="{Binding InsumoCodigo}" 
                    Width="130"/>
                <DataGridTextColumn Header="Categoría" 
                    Binding="{Binding TipoInsumoCodigo}" 
                    Width="100"/>
                <DataGridTextColumn Header="Fecha Pesado" 
                    Binding="{Binding FechaPesado}" 
                    Width="*"/>
                <DataGridTextColumn Header="Valor Pesado" 
                    Binding="{Binding Valor}" 
                    Width="80"/>
                <DataGridTextColumn Header="Usuario"
                    Binding="{Binding UsuarioNombre}" 
                    Width="100"/>
                <DataGridTextColumn Header="Código Único" 
                    Binding="{Binding Codigo}" 
                    Width="*"/>
                <DataGridTextColumn Header="Estado" 
                    Binding="{Binding Estado}" 
                    Width="50"/>
            </DataGrid.Columns>
        </DataGrid>
        <DatePicker 
            x:Name="StartDatePicker"
            HorizontalAlignment="Center"
            SelectedDate="{Binding FechaInicial, Mode=TwoWay}"
            Height="24" 
            Margin="0,90,0,0" 
            VerticalAlignment="Top" 
            Width="170"/>
        <DatePicker
            x:Name="EndDatePicker"
            HorizontalAlignment="Center"
            SelectedDate="{Binding FechaFinal, Mode=TwoWay}"
            Height="24"
            Margin="519,90,0,0"
            VerticalAlignment="Top"
            Width="170"/>
        <ComboBox x:Name="RecipeCmb" 
            HorizontalAlignment="Left" 
            Margin="64,102,0,0" 
            VerticalAlignment="Top" 
            Width="118"
            ItemsSource="{Binding RecetaList}"
            DisplayMemberPath="Codigo"
            SelectedValuePath="RecetaId"
            SelectedValue="{Binding SelectedRecetaId, Mode=TwoWay}"/>
        <ComboBox x:Name="SAPCodeCmb" 
            HorizontalAlignment="Left" 
            Margin="226,102,0,0" 
            VerticalAlignment="Top" 
            Width="118"
            ItemsSource="{Binding InsumoList}"
            DisplayMemberPath="Codigo"
            SelectedValuePath="InsumoId"
            SelectedValue="{Binding SelectedInsumoId, Mode=TwoWay}"/>
        <Button x:Name="SearchBtn" 
            Content="Buscar" 
            HorizontalAlignment="Left"
            Margin="905,113,0,0" 
            VerticalAlignment="Top"
            Width="65"
            Command="{Binding ReadBatchsCommand}"/>
    </Grid>
</Window>
